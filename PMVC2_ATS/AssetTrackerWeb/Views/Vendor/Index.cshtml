@model AssetTracker.Core.Models.Vendor
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category Setup</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <div class="row">
        <div class="col-md-12">
            <div class="">

                <h1>.</h1>
                <h1>.</h1>
                <h2><b><i> Vendor Setup</i></b></h2>
            </div>
        </div>
        <div class="col-md-12">

            @using (Html.BeginForm("Index", "Vendor"))
            {
                <div class="col-md-4">
                    <div class="col-md-12">

                        @Html.LabelFor(c => c.Name)
                        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })

                        @Html.LabelFor(c => c.Contact)
                        @Html.TextAreaFor(c => c.Contact, new { @class = "form-control" })

                        @Html.LabelFor(c => c.Email)
                        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })

                        @Html.LabelFor(c => c.Address)
                        @Html.TextAreaFor(c => c.Address, new { @class = "form-control" })

                        @Html.LabelFor(c => c.Status)
                        @Html.CheckBoxFor(c => c.Status)

                    </div>
                    <div class="col-md-6">
                        <br />
                        <button type="submit" class="btn-primary">Submit</button>
                    </div>
                </div>

                <div class="col-md-8">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Vendor)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.Status</td>
                                    <td><input type="button" value="Edit" class="btn-success" /></td>
                                    <td><input type="button" value="Delete" class="btn-warning" /></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            }

        </div>
    </div>

    <script src="~/Asset/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script type="text/javascript" src="~/Asset/js/jquery-1.12.1.min.js"></script>
    <!-- jQuery REVOLUTION Slider -->
    <script type="text/javascript" src="~/Asset/rs-plugin/js/jquery.themepunch.plugins.min.js"></script>
    <script type="text/javascript" src="~/Asset/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>

    <script src="~/Asset/js/bootstrap.min.js"></script>
    <script src="Scripts/jquery.validate.min.js"></script>
    <script src="Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- jQuery REVOLUTION Slider JvacriptCode -->

</body>
</html>



